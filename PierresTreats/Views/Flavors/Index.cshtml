@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavors we currently offer:</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, we currently have no flavors available. Try checking back later!</h3>
}

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
}

<p>@Html.ActionLink("Add a new flavor", "Create")</p>